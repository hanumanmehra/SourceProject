            <apex:actionStatus id="as2" onStart="ShowLoading();" onstop="HideLoading();"/>
            <apex:actionStatus id="as3" onStart="ShowLoading()"/> 
            <apex:actionFunction action="{!filter}" name="filname" reRender="OPId" status="as2" oncomplete="mastercheckbox()">
                <apex:param assignTo="{!alphabet}"  value="" name="para"/>
            </apex:actionFunction>
            <apex:outputpanel id="OPId">
            <apex:pageblocktable value="{!wraplist}" var="acli" id="tableid"  >
                <apex:column >
                <apex:facet name="header"><apex:inputCheckbox onclick="selectAllCheckboxes(this,'inputId');mastercheckbox();js5()" styleClass="selectall" /></apex:facet>
