<apex:page controller="PaginationController" sidebar="false" title="Account" standardStylesheets="false" tabStyle="Account" id="pageId" docType="HTML-5.0">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
    <!--<apex:pageMessages id="pagemsgId"/>-->
    <script>
        function myconfirm(selid) 
        {
            var r=confirm("Are you sure?");
            if(r==true)
            {
                funname(selid);
            }
            else(r==false)
            {
                parent.child.close();
            } 
        }
        function js2(alpid)
        {
            filname(alpid);
        }
        
        function js3()
        { 
            methodthirdInJavascript();
        }
        
        function js4()
        { 
            var id=document.getElementById('pageId:j_id28:myId:inputId').value;
            if(id<0)
            {
                alert('Negetive page number are not allowed');
            } 
            acfun(id); 
        }
       
        function ShowLoading() 
        {
            document.getElementById('blockbckanim').style.display="block";
        }
        function HideLoading()
        {
            document.getElementById('blockbckanim').style.display="none";
        }
        function selectAllCheckboxes(obj,receivedInputID) {
            var inputCheckBox = document.getElementsByTagName("input");
            console.log('---------inputCheckBox---'+inputCheckBox);
            for(var i=0; i<inputCheckBox.length; i++) {
                if(inputCheckBox[i].id.indexOf(receivedInputID)!=-1) {
                    inputCheckBox[i].checked = obj.checked;
                     console.log('---------inputCheckBox---'+inputCheckBox);
                }
            }
        }
        
        function mastercheckbox() {
            if($(".contactcb").length == $(".contactcb:checked").length)
             {
                $(".selectall").attr("checked", "checked");
                console.log('--------1-----'+'{!checked}');
            }
            else 
            { 
                $(".selectall").removeAttr("checked"); 
                console.log('--------2-----'+'{!checked}');
                
            }
            
        }
        function js5(){
        console.log('--------3-----');
            fun5();
            console.log('--------4-----');
        }
        
        function alphabold(item) {
            var a = document.getElementsByTagName('a');
            console.log('-----a----'+a);
            for (i = 0; i < a.length; i++) {
            a[i].classList.remove('active');
            console.log('----item----'+item);
            }
            item.classList.add('active');
            console.log('----item1----'+item);
        }
    </script>
    <style>
        #blockbckanim {
            background-color:rgba(196, 204, 220, 0.8);
            width:100%;
            height:100%;
            position: absolute;
            top: 0px;
            left: 0px;
            z-index: 1000;
            rgba(0, 0, 0, 0.71);
            cursor: wait;
        }
        
        .active 
        {
            color: yellow;
            font-weight: bold;
            font-size: 20px;
        }
        .color
        {
            color: blue;
        }
        a.clas:hover  
        {
            background-color: 'lightblue';
            font-size: 20px;
        }   
    </style>
    
    <div id="blockbckanim" style="display:none">
        <div id="apimgld"  >
            <img src="/img/loading32.gif" style="height: 22px;  margin-left: 44%; margin-top: 52px;position: fixed;" />&nbsp;&nbsp;<br/>
        </div>
    </div>
    <apex:sectionHeader Title="Accounts"/>
    <apex:pageblock mode="detailpage">
        
       
        <apex:form id="myId"> 
             
            <!-- Action function for selected list-->
            <apex:actionFunction id="actStatus" name="methodthirdInJavascript" action="{!Nooflistrecord}" status="as2" reRender="myId" />
            <!--Action function for number of page--> 
            <apex:actionFunction id="actStatus1" name="acfun" action="{!getPageSet}" status="as2" reRender="myId" >
                <apex:param name="a" assignTo="{!pageno}" value=""/>  
            </apex:actionFunction>  
            <!--Action function for delete account of page--> 
            <apex:actionFunction name="funname" action="{!deleteacc}"  reRender="myId,pagemsgId"  status="as2" >
                <apex:param name="as" assignto="{!selectid}" value=""/>
            </apex:actionFunction>
            
             <apex:actionFunction id="actStatus5" name="fun5" action="{!processSelected}" reRender="myId,pagemsgId"> 
             </apex:actionFunction>
                                              
            <apex:outputPanel style="float:right;text-bold:;" styleClass="panelclass">
