                    </apex:inputCheckbox>
                </apex:column>
                <apex:column headerValue="Action">
                    <apex:outputLink title="" value="/apex/NewAccountEdit?id={!acli.wrapperac.id}" style="color:blue">Edit </apex:outputLink>
                    &nbsp; | &nbsp;
                    <!-- commandlink for delete record-->
                    <apex:commandLink id="cmdId" onclick="myconfirm('{!acli.wrapperac.id}')" value="Del"  reRender="myId,pagemsgId" style="color:blue">          
                    </apex:commandLink>
                </apex:column> 
                <apex:column headerValue="Account Name">
                    <apex:outputLink value="/apex/NewAccount?id={!acli.wrapperac.Id}">{!acli.wrapperac.Name}</apex:outputLink>
                </apex:column>
                <apex:column value="{!acli.wrapperac.Site}"/>
