                <apex:column value="{!acli.wrapperac.Type}"/>
            </apex:pageblocktable> 
           
            
            <apex:pageBlockSection >
                <apex:outputPanel rendered="{!if(wraplist.size<=0,true,false)}" style="float:left">
                    <apex:outputText value="No records to display."></apex:outputText>
                </apex:outputPanel>
            </apex:pageBlockSection>
            
            <!--list of select option-->
            <div class="row" align="left" draggable="false">
                <div  class="col-sm-2">
                    <apex:outputtext value="{!PageStartno} - {!PageEndno} of {!Totalsize}" rendered="{!if(wraplist.size<=0,false,true)}"/> &nbsp; 
                    <apex:selectList value="{!Accept}" size="1" onchange="js3()" style="float:right;width: 106px;"  rendered="{!if(wraplist.size<=0,false,true)}">
                        <apex:selectOptions value="{!Items}"/>   
                    </apex:selectList>         
                </div>
                <div  class="col-sm-2">
                    
                </div>
                
                <!--command button for next,pre,last,first-->
                <div class="col-sm-4">
                    <apex:commandButton value="|<" action="{!first}" disabled="{!DisablePrevious}" title="First page" rerender="myId" status="as2" oncomplete="mastercheckbox()" rendered="{!if(wraplist.size<=0,false,true)}"/>
