<apex:page StandardController="Contact" showHeader="true" sidebar="false"
title="MyCases" deferLastCommandUntilReady="true">
<p> hello  {!$User.FirstName}</p>
<p>you are view the {!contact.Name}</p>
<apex:form >
<apex:image id="theImage" value="/img/myimage.gif" width="220" height="55"/>
     <apex:pageBlock title="My Contact" rendered="true" mode="edit">
     
    <apex:pageBlockSection title="Contact detail" columns="3">
    
     <apex:inputField value="{!contact.name}"/>
    <apex:inputField value="{!contact.title}"/>
    <apex:inputField value="{!contact.phone}"/>

<apex:pageblockSectionItem >
  <apex:outputLabel value="Birthday" for="Contact_Birthday"/>
  
   <apex:inputText value="{!contact.Birthdate}"  id="Contact_Birthday"/>
</apex:pageblockSectionItem>
<apex:pageBlockSectionItem >
<apex:outputLabel value="Email" for="Contact_Email"/>
<apex:inputText value="{!Contact.Email}" id="Contact_Email"/>

</apex:pageBlockSectionItem>
</apex:pageBlockSection>

  <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
 
 </apex:pageBlock>
 </apex:form>
  
    <apex:form ><apex:pageBlock >
     <apex:pageBlockButtons >
                <apex:commandButton action="{!edit}" id="editButton" value="Edit"/>
                <apex:commandButton action="{!save}" id="saveButton" value="Save"/>
                <apex:commandButton onclick="resetInlineEdit()" id="cancelButton" value="Cancel"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection >
                <apex:outputField value="{!contact.lastname}">
                    <apex:inlineEditSupport showOnEdit="saveButton, cancelButton" 
                        hideOnEdit="editButton" event="ondblclick" 
                        changedStyleClass="myBoldClass" resetFunction="resetInlineEdit"/>              
         </apex:outputField>\
         </apex:pageBlockSection>
         </apex:pageBlock>
         </apex:form>
 
 <apex:relatedList list="Cases"/>

   <table border="0" >

        <tr>

            <th>Case Number</th><th>Origin</th>

            <th>Creator Email</th><th>Status</th>

        </tr>

        <apex:repeat var="cases" value="{!Contact.Cases}">

        <tr>

            <td>{!cases.CaseNumber}</td>

            <td>{!cases.Origin}</td>

            <td>{!cases.Contact.email}</td>

            <td>{!cases.Status}</td>

        </tr>

        </apex:repeat> 

    </table>
</apex:page>